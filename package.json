{
  "name": "nest-bone",
  "version": "1.1.0",
  "description": "bone framework with nestjs",
  "author": "Kevis Wang(keviswang@outlook.com)",
  "license": "MIT",
  "scripts": {
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "prestart:prod": "rimraf dist && tsc && tscpaths -p tsconfig.json -s ./src -o ./dist",
    "start:prod": "node dist/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "migrate:create": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:create",
    "migrate:generate": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:generate",
    "migrate": "cross-env NODE_ENV=production ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:run",
    "model:generate": "./node_modules/.bin/typeorm-model-generator"
  },
  "dependencies": {
    "@nestjs/common": "^5.5.0",
    "@nestjs/core": "^5.5.0",
    "@nestjs/typeorm": "^5.2.2",
    "class-sanitizer": "^0.0.5",
    "class-transformer": "^0.2.0",
    "class-validator": "^0.9.1",
    "date-fns": "^1.30.1",
    "dotenv": "^6.2.0",
    "fastify": "^1.12.1",
    "fastify-formbody": "^2.0.1",
    "fastify-static": "^1.0.0",
    "handlebars": "^4.0.12",
    "jsonwebtoken": "^8.4.0",
    "mysql": "^2.16.0",
    "passport": "^0.4.0",
    "pg": "^7.5.0",
    "pino": "^5.7.0",
    "point-of-view": "^2.1.0",
    "qs": "^6.6.0",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^6.2.2",
    "typeorm": "^0.2.9",
    "typescript": "^3.2.0"
  },
  "devDependencies": {
    "@nestjs/testing": "^5.5.0",
    "@types/jest": "^23.3.1",
    "@types/jsonwebtoken": "^8.3.0",
    "@types/node": "^10.7.1",
    "@types/passport": "^0.4.7",
    "@types/pino": "^5.6.0",
    "@types/supertest": "^2.0.5",
    "jest": "^23.5.0",
    "nodemon": "^1.18.3",
    "pino-pretty": "^2.5.0",
    "prettier": "^1.14.2",
    "rimraf": "^2.6.2",
    "supertest": "^3.1.0",
    "ts-jest": "^23.1.3",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.5.0",
    "tscpaths": "^0.0.6",
    "tslint": "5.12.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
