{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": false,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@common/*": [
        "common/*"
      ],
      "@utils/*": [
        "utils/*"
      ],
      "@helpers/*": [
        "helpers/*"
      ],
      "@constants/*": [
        "constants/*"
      ],
      "@interfaces/*": [
        "interfaces/*"
      ],
      "@exceptions/*": [
        "exceptions/*"
      ],
      "@filters": [
        "filters/index"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}